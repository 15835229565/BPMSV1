<UserControl x:Class="BPMS.Views.Default.TipControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
             xmlns:Microsoft_CSharp_RuntimeBinder="clr-namespace:Microsoft.CSharp.RuntimeBinder;assembly=Microsoft.CSharp"
             Visibility="Hidden">
    <Canvas>
        <ed:Callout x:Name="tipCallout" Height="30" Width="150" CalloutStyle="RoundedRectangle" Stroke="Black" Fill="#FFF4F4F5" Panel.ZIndex="1" Opacity="0">
            <ed:Callout.Effect>
                <DropShadowEffect Opacity="0.5"/>
            </ed:Callout.Effect>
        </ed:Callout>
    </Canvas>
</UserControl>
